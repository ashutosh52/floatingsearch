<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_nav_info"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:layout_margin="8dp"
    android:background="@drawable/layout_border"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/image_button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/auto_complete_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="19sp"
            android:hint="@string/hint_search"
            android:layout_toEndOf="@+id/image_button_left"
            android:layout_toStartOf="@+id/image_button_right"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:padding="10dp"/>
        <ImageButton
            android:id="@+id/image_button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/list_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>